{
	"extends": "aegir/src/config/tsconfig.aegir.json",
	"compilerOptions": {
		// allow top level await 
		"allowJs": true,
		"checkJs": false,
		"strict": false,
		"experimentalDecorators": true,
		/* "emitDecoratorMetadata": true, */
		"strictNullChecks": false,
		"allowUnusedLabels": true,
		"noUnusedLocals": false,
		"outDir": "dist",
	},
	"include": [
		"examples",
		"modules",
		"topics",
		"examples"
	]
}