{
	"name": "@peerbit/indexer-sqlite3",
	"version": "1.2.29",
	"description": "SQLite index for document store",
	"type": "module",
	"sideEffects": false,
	"types": "./dist/src/index.d.ts",
	"typesVersions": {
		"*": {
			"*": [
				"*",
				"dist/*",
				"dist/src/*",
				"dist/src/*/index"
			],
			"src/*": [
				"*",
				"dist/*",
				"dist/src/*",
				"dist/src/*/index"
			]
		}
	},
	"files": [
		"src",
		"dist",
		"!dist/e2e",
		"!dist/test",
		"!**/*.tsbuildinfo"
	],
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/src/index.js"
		},
		"./sqlite.org": {
			"types": "./dist/peerbit/sqlite.org/sqlite3.d.ts",
			"import": "./dist/peerbit/sqlite.org/sqlite3.js"
		}
	},
	"browser": {
		"./dist/src/sqlite3.js": "./dist/src/sqlite3.browser.js"
	},
	"eslintConfig": {
		"extends": "peerbit",
		"parserOptions": {
			"project": true,
			"sourceType": "module"
		},
		"ignorePatterns": [
			"!.aegir.js",
			"test/ts-use",
			"*.d.ts"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"clean": "aegir clean",
		"copy-sqlite-wasm": "mkdir -p ./dist/peerbit/ && cp -r ../../../../node_modules/.pnpm/@sqlite.org+sqlite-wasm@3.50.4-build1/node_modules/@sqlite.org/sqlite-wasm/sqlite-wasm/jswasm/. ./dist/peerbit/",
		"build-worker": "../../../../node_modules/.pnpm/esbuild@0.25.10/node_modules/esbuild/bin/esbuild --bundle ./src/sqlite3.worker.ts --format=esm  --outfile=./dist/peerbit/sqlite3.worker.min.js",
		"build": "aegir build && npm run build-worker && npm run copy-sqlite-wasm",
		"test": "aegir test",
		"test:browser": "aegir clean && aegir test -t browser",
		"test:node": "aegir clean && aegir test -t node",
		"lint": "aegir lint"
	},
	"author": "dao.xyz",
	"license": "MIT",
	"dependencies": {
		"better-sqlite3": "^12.4.1",
		"@dao-xyz/borsh": "^5.2.3",
		"@peerbit/indexer-interface": "workspace:*",
		"@peerbit/crypto": "workspace:*",
		"@peerbit/time": "workspace:*",
		"@sqlite.org/sqlite-wasm": "^3.50.4-build1",
		"p-defer": "^4.0.0",
		"uint8arrays": "^5.1.0",
		"uuid": "^10.0.0",
		"libsodium-wrappers": "^0.7.15"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.13",
		"@peerbit/indexer-tests": "workspace:*",
		"@peerbit/build-assets": "workspace:*",
		"esbuild": "^0.25.10"
	}
}
