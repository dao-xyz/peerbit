{
	"name": "@dao-xyz/peerbit-program",
	"version": "0.5.0",
	"description": "Program interface",
	"type": "module",
	"sideEffects": false,
	"module": "lib/esm/index.js",
	"types": "lib/esm/index.d.ts",
	"exports": {
		"import": "./lib/esm/index.js"
	},
	"files": [
		"lib",
		"src",
		"!src/**/__tests__",
		"!lib/**/__tests__",
		"LICENSE"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"clean": "shx rm -rf lib/*",
		"build": "yarn clean && tsc -p tsconfig.json",
		"postbuild": "echo '{\"type\":\"module\"} ' | node ../../../node_modules/.bin/json > lib/esm/package.json",
		"test": "node ../../../node_modules/.bin/jest test  -c  ../../../jest.config.ts --runInBand --forceExit",
		"test:unit": "node ../../../node_modules/.bin/jest test  -c  ../../../jest.config.unit.ts --runInBand --forceExit",
		"test:integration": "node ../node_modules/.bin/jest test -c  ../../../jest.config.integration.ts --runInBand --forceExit"
	},
	"author": "dao.xyz",
	"license": "MIT",
	"dependencies": {
		"@dao-xyz/borsh": "^5.1.5",
		"@dao-xyz/libp2p-direct-sub": "^0.2.0",
		"@dao-xyz/peerbit-crypto": "^0.1.12",
		"@dao-xyz/peerbit-libp2p": "^0.2.0",
		"@dao-xyz/peerbit-store": "^0.5.0"
	}
