{
	"name": "@peerbit/react",
	"version": "0.0.1",
	"description": "React bindings for Peerbit clients",
	"sideEffects": false,
	"type": "module",
	"types": "./dist/src/index.d.ts",
	"typesVersions": {
		"*": {
			"*": ["*", "dist/*", "dist/src/*", "dist/src/*/index"],
			"src/*": ["*", "dist/*", "dist/src/*", "dist/src/*/index"]
		}
	},
	"files": [
		"src",
		"dist",
		"!dist/vitest",
		"!**/*.tsbuildinfo"
	],
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/src/index.js"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"clean": "aegir clean",
		"build": "aegir build --no-bundle",
		"test": "vitest run",
		"lint": "aegir lint"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0"
	},
	"dependencies": {
		"@chainsafe/libp2p-noise": "^17.0.0",
		"@dao-xyz/borsh": "^6.0.0",
		"@libp2p/interface": "^3.1.0",
		"@libp2p/websockets": "^10.1.0",
		"@chainsafe/libp2p-yamux": "^8.0.0",
		"@multiformats/multiaddr": "^13.0.1",
		"@peerbit/crypto": "workspace:*",
		"@peerbit/proxy-window": "workspace:*",
		"@peerbit/program": "workspace:*",
		"@peerbit/indexer-interface": "workspace:*",
		"debug": "^4.3.7",
		"detectincognitojs": "^1.6.1",
		"libsodium-wrappers": "^0.7.14",
		"peerbit": "workspace:*",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@types/debug": "^4.1.12",
		"@types/libsodium-wrappers": "^0.7.14",
		"@peerbit/time": "workspace:*",
		"@types/node-localstorage": "^1.3.3",
		"@types/react": "^18.3.11",
		"chai": "^5.2.0",
		"node-localstorage": "^3.0.5",
		"sinon": "^21.0.0",
		 "vitest": "^3.2.4"
	},
	"author": "dao.xyz",
	"license": "MIT"
}
