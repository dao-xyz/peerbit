{
	"name": "@peerbit/canonical-host",
	"version": "1.0.4",
	"description": "Peerbit canonical runtime host implementation (worker/server)",
	"author": "dao.xyz",
	"license": "MIT",
	"sideEffects": false,
	"type": "module",
	"types": "./dist/src/index.d.ts",
	"typesVersions": {
		"*": {
			"*": [
				"*",
				"dist/*",
				"dist/src/*",
				"dist/src/*/index"
			],
			"src/*": [
				"*",
				"dist/*",
				"dist/src/*",
				"dist/src/*/index"
			]
		}
	},
	"files": [
		"src",
		"dist",
		"!dist/test",
		"!**/*.tsbuildinfo"
	],
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/src/index.js"
		},
		"./shared-worker": {
			"types": "./dist/src/shared-worker.d.ts",
			"import": "./dist/src/shared-worker.js"
		},
		"./service-worker": {
			"types": "./dist/src/service-worker.d.ts",
			"import": "./dist/src/service-worker.js"
		},
		"./window": {
			"types": "./dist/src/window.d.ts",
			"import": "./dist/src/window.js"
		}
	},
	"eslintConfig": {
		"extends": "peerbit",
		"parserOptions": {
			"project": true,
			"sourceType": "module"
		},
		"ignorePatterns": [
			"!.aegir.js",
			"test/ts-use",
			"*.d.ts"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dao-xyz/peerbit"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@dao-xyz/borsh": "^6.0.0",
		"@libp2p/peer-id": "^6.0.1",
		"@peerbit/canonical-transport": "workspace:*",
		"@peerbit/crypto": "workspace:*",
		"peerbit": "workspace:*"
	},
	"devDependencies": {
		"@peerbit/canonical-client": "workspace:*"
	},
	"scripts": {
		"clean": "aegir clean",
		"build": "aegir build --no-bundle",
		"test": "aegir test --target node",
		"lint": "aegir lint"
	},
	"localMaintainers": [
		"dao.xyz"
	],
	"keywords": [
		"peerbit",
		"rpc",
		"canonical",
		"worker",
		"sharedworker"
	]
}
