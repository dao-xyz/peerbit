{
	"private": true,
	"name": "org",
	"author": "dao.xyz",
	"repository": {
		"type": "git",
		"url": "https://github.com/dao-xyz/peerbit"
	},
	"license": "Apache-2.0",
	"type": "module",
	"workspaces": [
		"packages/docs",
		"packages/transport/blocks",
		"packages/transport/blocks-interface",
		"packages/transport/stream",
		"packages/transport/stream-interface",
		"packages/transport/stream/e2e/browser",
		"packages/transport/stream/e2e/browser/browser-node",
		"packages/transport/pubsub",
		"packages/transport/pubsub-interface",
		"packages/transport/libp2p-test-utils",
		"packages/log",
		"packages/clients/peerbit",
		"packages/clients/peerbit-proxy/proxy",
		"packages/clients/peerbit-proxy/window",
		"packages/clients/peerbit-proxy/window/**",
		"packages/clients/peerbit-server/frontend",
		"packages/clients/peerbit-server/node",
		"packages/clients/peerbit-server/test-lib",
		"packages/clients/test-utils",
		"packages/clients/vite",
		"packages/programs/rpc",
		"packages/programs/acl/identity-access-controller",
		"packages/programs/acl/trusted-network",
		"packages/programs/program",
		"packages/programs/clock-service",
		"packages/programs/transport",
		"packages/programs/data/document/*",
		"packages/programs/data/*",
		"packages/utils/crypto",
		"packages/utils/any-store/*",
		"packages/utils/time",
		"packages/utils/cache",
		"packages/utils/logger",
		"packages/utils/keychain",
		"packages/utils/indexer/*"
	],
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"reset": "aegir run clean && aegir clean interop/node_modules packages/**/node_modules node_modules package-lock.json packages/*/package-lock.json interop/*/package-lock.json",
		"test": "aegir run test",
		"test:node": "aegir run test:node",
		"test:chrome": "aegir run test:chrome",
		"test:chrome-webworker": "aegir run test:chrome-webworker",
		"test:firefox": "aegir run test:firefox",
		"test:firefox-webworker": "aegir run test:firefox-webworker",
		"test:electron-main": "aegir run test:electron-main",
		"test:cli": "aegir run test:cli",
		"test:interop": "aegir run test:interop",
		"test:docs": "aegir run test --roots ./docs -- -t node",
		"test:part-1": "aegir run test --roots ./packages/utils/**/* ./packages/clients/** ./packages/log  -- -t node",
		"test:part-2": "aegir run test --roots ./packages/programs/**/* ./docs -- -t node",
		"test:part-3": "aegir run test --roots ./packages/transport/**/* -- -t node",
		"coverage": "aegir run coverage",
		"build": "aegir run build",
		"clean": "aegir run clean",
		"lint": "aegir run lint",
		"docsify": "docsify serve ./docs",
		"dep-check": "aegir run dep-check",
		"doc-check": "aegir run doc-check",
		"release": "aegir exec --bail false npm -- publish",
		"release:rc": "aegir release-rc",
		"deploy": "yarn deploy:docs && yarn deploy:example",
		"deploy:docs": "yarn docs && gh-pages --dist docs --dotfiles",
		"fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
		"postinstall": "mkdir -p node_modules/chai-extend && cp chai-global.js node_modules/chai-extend/chai-global.js && echo '{\"type\": \"module\"}' > node_modules/chai-extend/package.json && patch-package"
	},
	"devDependencies": {
		"@playwright/test": "^1.47.0",
		"@types/benchmark": "^2.1.5",
		"@types/mocha": "^10.0.8",
		"mocha": "^10.7.3",
		"@types/node": "^22.5.4",
		"@types/wicg-file-system-access": "^2023.10.5",
		"aegir": "github:marcus-pousette/aegir#multiple-assets",
		"eslint-config-peerbit": "https://github.com/dao-xyz/eslint-config-peerbit",
		"benchmark": "^2.1.4",
		"chai-as-promised": "^7.1.1",
		"dotenv": "^16.4.5",
		"eslint-plugin-n": "^17.10.2",
		"gh-pages": "^5.0.0",
		"patch-package": "^8.0.0",
		"prettier": "^3.3.3",
		"sinon": "^18.0.1",
		"typescript": "^5.6.3",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0"
	},
	"version": "0.0.0"
}
