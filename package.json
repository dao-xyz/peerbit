		"eslint-config-peerbit": "https://github.com/dao-xyz/eslint-config-peerbit",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jest": "^28.9.0",
		"eslint-plugin-n": "^17.10.2",
		"eslint-plugin-react-hooks": "^4.6.2",
		"find-up": "^8.0.0",
		"gh-pages": "^6.3.0",
		"mocha": "^11.7.2",
		"prettier": "^3.3.3",
		"shx": "^0.4.0",
		"sinon": "^21.0.0",
		"tinybench": "^5.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3",
		"vitest": "^4.0.12"
	},
	"version": "0.0.0"
}
