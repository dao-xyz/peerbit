		"packages/clients/peerbit-server/node",
		"packages/clients/peerbit-server/test-lib",
		"packages/clients/test-utils",
		"packages/clients/vite",
		"packages/clients/vite/e2e",
		"packages/clients/peerbit-react/e2e/browser",
		"packages/programs/rpc",
		"packages/programs/acl/identity-access-controller",
		"packages/programs/acl/trusted-network",
		"packages/programs/program/program",
		"packages/programs/program/react",
		"packages/programs/clock-service",
		"packages/programs/transport",
		"packages/programs/data/*",
		"packages/programs/data/document/*",
		"packages/programs/data/document/react/e2e/party",
		"packages/programs/data/document/react/e2e/party/shared",
		"packages/programs/data/document/react/e2e/party/browser-node",
		"packages/programs/data/document/react/e2e/canonical",
		"packages/programs/data/document/proxy/e2e",
		"packages/programs/data/shared-log/proxy",
		"packages/programs/data/shared-log/proxy/e2e",
		"packages/utils/crypto",
		"packages/utils/any-store/*",
		"packages/utils/any-store/proxy/e2e",
		"packages/utils/build-assets",
		"packages/utils/time",
		"packages/utils/cache",
		"packages/utils/logger",
		"packages/utils/keychain",
		"packages/utils/indexer/*",
		"packages/utils/rateless-iblt"
	],
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"reset": "aegir run clean && aegir clean interop/node_modules packages/**/node_modules node_modules package-lock.json packages/*/package-lock.json interop/*/package-lock.json",
		"test": "aegir run test",
		"test:node": "aegir run test:node",
		"test:chrome": "aegir run test:chrome",
		"test:chrome-webworker": "aegir run test:chrome-webworker",
		"test:firefox": "aegir run test:firefox",
		"test:firefox-webworker": "aegir run test:firefox-webworker",
		"test:electron-main": "aegir run test:electron-main",
		"test:cli": "aegir run test:cli",
		"test:interop": "aegir run test:interop",
		"test:docs": "aegir run test --roots ./docs -- -t node",
		"test:part-1": "aegir run test --roots ./packages/utils/** ./packages/clients/** ./packages/log  -- -t node",
		"test:part-2": "aegir run test --roots ./packages/programs/data/document/** -- -t node",
		"test:part-3": "aegir run test --roots ./packages/transport/** -- -t node",
		"test:part-4": "aegir run test --roots ./packages/programs/data/shared-log ./packages/programs/data/shared-log/proxy -- -t node",
		"test:part-4:mock": "PEERBIT_TEST_SESSION=mock aegir run test --roots ./packages/programs/data/shared-log ./packages/programs/data/shared-log/proxy -- -t node",
		"test:part-5": "aegir run test --roots ./packages/programs/rpc ./packages/programs/acl/** ./packages/programs/program/** ./packages/programs/clock-service ./packages/programs/data/string ./docs -- -t node",
		"coverage": "aegir run coverage",
		"build": "aegir run build",
		"clean": "aegir run clean",
		"lint": "pnpm exec eslint --config ./eslint.config.js --cache --max-warnings 9999 --ignore-pattern \"packages/**/public/**\" \"packages/**/*.{ts,tsx,js,jsx,mjs,cjs}\"",
		"docsify": "docsify serve ./docs",
		"dep-check": "aegir run dep-check",
		"doc-check": "aegir run doc-check",
		"release": "aegir exec --bail false pnpm -- publish",
		"release:rc": "AEGIR_PACKAGE_MANAGER=pnpm aegir release-rc",
		"deploy": "pnpm run deploy:docs && pnpm run deploy:example",
		"deploy:docs": "pnpm run docs && gh-pages --dist docs --dotfiles",
		"fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
		"postinstall": "mkdir -p node_modules/chai-extend && cp chai-global.js node_modules/chai-extend/chai-global.js && echo '{\"type\": \"module\"}' > node_modules/chai-extend/package.json"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@ipshipyard/node-datachannel",
			"aws-sdk",
			"better-sqlite3",
			"classic-level",
			"esbuild",
			"node-datachannel",
			"protobufjs",
			"unrs-resolver"
		],
		"overrides": {
			"@dao-xyz/borsh": "6.0.1",
			"@libp2p/peer-collections": "7.0.7",
			"esbuild": "0.25.10"
		}
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.1.0",
